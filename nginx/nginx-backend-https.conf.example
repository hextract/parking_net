# IMPORTANT: Replace all ${VARIABLE} placeholders with actual values from your .env file
# 
# Variables to replace:
# - ${FRONTEND_DOMAIN} → Your frontend domain (e.g., parking-net.space)
# - ${BACKEND_DOMAIN} → Your backend domain (e.g., backend.parking-net.space)
# - ${BACKEND_IP} → Your backend server IP (e.g., 158.160.131.173)
# - ${AUTH_REST_PORT} → Auth service port from .env (default: 8800)
# - ${PARKING_REST_PORT} → Parking service port from .env (default: 8888)
# - ${BOOKING_REST_PORT} → Booking service port from .env (default: 8880)
# - ${PAYMENT_REST_PORT} → Payment service port from .env (default: 8890)
#
# Note: Nginx doesn't support environment variables directly.
# Use envsubst or manually replace before using this config.

map $http_origin $cors_origin {
    default "*";
    "~^https://${FRONTEND_DOMAIN}(:[0-9]+)?$" $http_origin;
    "~^https://www\.${FRONTEND_DOMAIN}(:[0-9]+)?$" $http_origin;
    "~^http://localhost(:[0-9]+)?$" $http_origin;
    "~^http://127\.0\.0\.1(:[0-9]+)?$" $http_origin;
}

server {
    listen 80;
    server_name ${BACKEND_DOMAIN} ${BACKEND_IP};
    
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
    
    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name ${BACKEND_DOMAIN} ${BACKEND_IP};
    
    ssl_certificate /etc/letsencrypt/live/${BACKEND_DOMAIN}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/${BACKEND_DOMAIN}/privkey.pem;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    add_header X-Frame-Options "DENY" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    underscores_in_headers on;
    client_max_body_size 10M;

    location /auth {
        add_header Access-Control-Allow-Origin $cors_origin always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, api_key, Authorization, X-Requested-With" always;
        add_header Access-Control-Max-Age 3600 always;

        if ($request_method = OPTIONS) {
            return 204;
        }

        proxy_pass http://localhost:${AUTH_REST_PORT};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass_request_headers on;
    }

    location /parking {
        add_header Access-Control-Allow-Origin $cors_origin always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, api_key, Authorization, X-Requested-With" always;
        add_header Access-Control-Max-Age 3600 always;

        if ($request_method = OPTIONS) {
            return 204;
        }

        proxy_pass http://localhost:${PARKING_REST_PORT};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header api_key $http_api_key;
    }

    location /booking {
        add_header Access-Control-Allow-Origin $cors_origin always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, api_key, Authorization, X-Requested-With" always;
        add_header Access-Control-Max-Age 3600 always;

        if ($request_method = OPTIONS) {
            return 204;
        }

        proxy_pass http://localhost:${BOOKING_REST_PORT};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header api_key $http_api_key;
    }

    location /payment {
        add_header Access-Control-Allow-Origin $cors_origin always;
        add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type, api_key, Authorization, X-Requested-With" always;
        add_header Access-Control-Max-Age 3600 always;

        if ($request_method = OPTIONS) {
            return 204;
        }

        proxy_pass http://localhost:${PAYMENT_REST_PORT};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header api_key $http_api_key;
    }

    location / {
        return 404;
    }
}
